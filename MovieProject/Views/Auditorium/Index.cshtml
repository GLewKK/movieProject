@model MovieProject.ViewModels.AuditoriumViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <h2>Create Auditoriu</h2>

        @using (Html.BeginForm("Index", "Auditorium", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "", @placeholder = "Enter Name" })
            </div>
           
            <div class="form-group">
                @Html.LabelFor(m => m.Length, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Length, new { @class = "", @placeholder = "Enter Length" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Width, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Width, new { @class = "", @placeholder = "Enter Width" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        }

    </div>
    </div>



