@model MovieProject.ViewModels.GenresViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Create Genre";
}
    <div id="page-wrapper">
        <div class="container-fluid">
            <h2>Create Genre</h2>

            @using (Html.BeginForm("CreateGenre", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "", @placeholder = "Title" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            }
        </div>
    </div>
        

