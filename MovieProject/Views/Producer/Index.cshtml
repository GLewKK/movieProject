@model MovieProject.ViewModels.ProducerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <h2>Create Producer</h2>

        @using (Html.BeginForm("Index", "Producer", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "", @placeholder = "Enter First Name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "", @placeholder = "Enter Last Name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Link, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Link, new { @class = "", @placeholder = "Enter Link" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Add</button>
            </div>
            
            
        }

</div>
    </div>
