@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    if (this.User.IsInRole("User"))
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
        {
            @Html.AntiForgeryToken()
            <li class=" divider"></li>
            <li>
                <a href="@Url.Action("Index", "Manage")"><i class="fa fa-gear fa-fw"></i>Account</a>
            </li>
            <li class="divider"></li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i>Log Out</a>
            </li>
        }
    }
    else
    {

        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <li class=" divider"></li>
            <li class="menu-item">
                <a href="@Url.Action("Index", "Manage")"><i class="fa fa-gear fa-fw"></i>Account</a>
            </li>
            <li class="divider"></li>
            <li class="menu-item">
                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i>Log Out Boss</a>
            </li>
        }
    }
}

else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
